<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.actualmoneyclickergame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ActualMoneyClickerGame">
        <activity
            android:name=".winActivity"
            android:exported="false" />
        <activity
            android:name=".statusScreen"
            android:exported="false" />
        <activity
            android:name=".MainGamePlayScreen"
            android:exported="false" />
        <activity
            android:name=".ShopPage"
            android:exported="false" />
        <activity
            android:name=".GameScreen"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>